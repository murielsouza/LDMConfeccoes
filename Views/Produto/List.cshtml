@model ProdutoListViewModel

@{
    ViewData["Title"] = "LDM Confeccções ::: Produtos";
    //Layout = null;
}

<div>
    <h2>@Model.CategoriaAtual</h2>
</div>
<hr />
<hr />
<p> Total de Produtos: @ViewBag.Total</p>

<div class="container">
